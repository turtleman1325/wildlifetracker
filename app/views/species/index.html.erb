<p id="notice"><%= notice %></p>

<h1>Listing Species</h1>

<table>
  <thead>
    <tr>
      <th>Species</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @species.each do |species| %>
      <tr>
        <td><%= species.species %></td>
        <td><%= link_to image_tag('https://articulate-heroes.s3.amazonaws.com/uploads/attachment/attachment_url/6949/1-without-opcity.png?dl=true', width:15, height:15), species %></td>


        <td><%= link_to image_tag('http://vignette2.wikia.nocookie.net/lains-horrible-adventure/images/b/b6/Edit-icon.png/revision/latest?cb=20130313015516', width:15, height:15), edit_species_path(species) %></td>
        <td><%= link_to image_tag('https://cdn2.iconfinder.com/data/icons/large-glossy-svg-icons/512/erase_delete_remove_wipe_out-512.png', width:15, height:15), species, method: :delete, data: { confirm: 'Delete?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Species', new_species_path %>
<%= link_to 'Sightings', '/sightings' %>
<%= link_to 'Regions', '/regions' %>
